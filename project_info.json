{
  "name": "IO Storage Service",
  "description": "Lightweight file storage service with SHA1 deduplication - 轻量级存储基座",
  "type": "Storage API Service",
  "status": "Production",
  "main_technologies": {
    "backend": {
      "language": "Go",
      "version": "1.21",
      "framework": "Gin",
      "database": "SQLite (modernc.org/sqlite)",
      "configuration": "YAML"
    }
  },
  "features": [
    "SHA1-based file deduplication",
    "Reference counting for safe deletion",
    "Simple API key authentication",
    "Lightweight SQLite storage",
    "REST API with 4 endpoints",
    "Docker support",
    "Client libraries for multiple languages"
  ],
  "api_endpoints": [
    "POST /api/store - Store file",
    "GET /api/file/:sha1 - Retrieve file",
    "DELETE /api/file/:sha1 - Delete file",
    "GET /api/stats - Storage statistics"
  ],
  "storage": {
    "method": "SHA1 content addressing",
    "structure": "2-level directory hierarchy (first 2 chars / next 2 chars)",
    "database": "SQLite for metadata",
    "deduplication": "Automatic via SHA1 hashing"
  },
  "security": {
    "authentication": "API key via X-API-Key header",
    "configurable": "Via config.yaml"
  },
  "client_examples": {
    "languages": ["Go", "Python", "JavaScript"],
    "location": "./examples/"
  },
  "deployment": {
    "methods": ["Binary", "Docker"],
    "port": 8080,
    "volumes": "./storage for data persistence"
  },
  "use_cases": [
    "File storage backend",
    "Content-addressed storage",
    "Microservice storage layer",
    "Document management systems"
  ],
  "architecture": "Simple monolithic service with clean separation of concerns"
}